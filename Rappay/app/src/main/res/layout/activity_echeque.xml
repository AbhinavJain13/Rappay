<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rappay.com.rohit.rapidgrid.EChequeActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity = "center_horizontal"
        android:layout_weight="1.0"
        android:columnCount="2"
        android:rowCount="2"
        >


        <Button
            android:id="@+id/btnGcheque"
            style="@style/custombutton"
            android:background="@drawable/gcheck_pis"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="8dp"
            android:layout_row="0"

            android:layout_column="0" />

        <Button
            android:id="@+id/btnShareCheque"
            style="@style/custombutton"
           android:background="@drawable/sharecheque"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="8dp"
            android:layout_row="0"


            android:layout_column="1" />

        <Button
            android:id="@+id/btninCheque"
            style="@style/custombutton"
             android:background="@drawable/incheck"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_row="1"

            android:layout_column="0" />


        <Button
            android:id="@+id/btnoutCheque"
            style="@style/custombutton"
            android:background="@drawable/outcheck"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_row="1"
            android:layout_column="1" />




    </GridLayout>
</RelativeLayout>
