<?xml version="1.0" encoding="utf-8"?>


    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Qpay_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="rappay.com.rohit.rapidgrid.QPay_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <Button
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/colorAccent"

            android:text="Click to Scan "
            android:onClick="scanToolbar"
            android:id="@+id/ScanToPay"
            />


    </LinearLayout>



        <include layout="@layout/content_qpay_r"
            android:id="@+id/Qpay_reponselayout"

            />







</android.support.design.widget.CoordinatorLayout>
