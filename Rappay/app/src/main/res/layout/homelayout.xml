<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    tools:openDrawer="start">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"

    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity = "center_horizontal"
        android:layout_weight="1.0"
        android:layout_marginLeft="5dp"
        android:columnCount="2"
        android:rowCount="3"
        >


        <Button
            android:id="@+id/btnprofile"
            style="@style/custombutton"
            android:layout_row="0"
            android:background="@drawable/profile_img"
            android:layout_marginLeft="5dp"
            android:layout_column="0" />

        <Button
            android:id="@+id/btnTransaction"
            style="@style/custombutton"
            android:background="@drawable/finaltransactions"
            android:layout_row="1"
            android:layout_marginLeft="5dp"
            android:layout_column="0" />


        <Button
            android:id="@+id/btnAccountsummary"
            style="@style/custombutton"
            android:background="@drawable/accountsummart_pic"
            android:layout_row="0"

            android:layout_column="1" />

        <Button
            android:id="@+id/btnQpay"
            style="@style/custombutton"
            android:background="@drawable/qpayment"
            android:layout_row="1"


            android:layout_column="1" />


        <Button
            android:id="@+id/btnEcheque"
            style="@style/custombutton"
            android:layout_marginLeft="5dp"
            android:background="@drawable/echeque_pic"
            android:layout_row="2"


            android:layout_column="0" />

        <Button
            android:id="@+id/b_6"
            style="@style/custombutton"
            android:layout_row="2"
            android:background="@drawable/wallet_pic"
            android:layout_column="1" />
    </GridLayout>
    </ScrollView>

</LinearLayout>

</android.support.v4.widget.DrawerLayout>