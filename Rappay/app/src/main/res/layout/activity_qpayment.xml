<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rappay.com.rohit.rapidgrid.QPaymentActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity = "center_horizontal"
        android:layout_weight="1.0"
        android:columnCount="2"
        android:rowCount="2"
        >


        <Button
            android:id="@+id/btnQpay"
            style="@style/custombutton"

            android:layout_row="0"
            android:background="@drawable/qpay"


            android:layout_column="0"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="8dp"
            />

        <Button
            android:id="@+id/btnGBill"
            style="@style/custombutton"
            android:background="@drawable/gbill"
            android:layout_row="1"
            android:paddingRight="5dp"
            android:layout_column="0"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="8dp"
            />


        <Button
            android:id="@+id/btnQcards"
            style="@style/custombutton"
            android:background="@drawable/qcards"
            android:layout_row="0"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_column="1" />

        <Button
            android:id="@+id/btnQcardscanner"
            style="@style/custombutton"
            android:background="@drawable/qscanner"
            android:layout_row="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_column="1" />



    </GridLayout>
</RelativeLayout>
